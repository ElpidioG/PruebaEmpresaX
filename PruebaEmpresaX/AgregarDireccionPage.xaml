<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PruebaEmpresaX"
             x:Class="PruebaEmpresaX.AgregarDireccionPage">

    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="idEntry" Placeholder="ID"/>
            <Entry x:Name="calleEntry" Placeholder="Calle"/>
            <Entry x:Name="numeroEntry" Placeholder="Número"/>
            <Entry x:Name="ciudadEntry" Placeholder="Ciudad"/>
            <Entry x:Name="estadoEntry" Placeholder="Estado"/>
            <Entry x:Name="paisEntry" Placeholder="País"/>
            <Entry x:Name="idClienteEntry" Placeholder="ID del Cliente"/>
            <Button x:Name="AddAddress" Text="Agregar Dirección" Clicked="AddAddress_Clicked"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>